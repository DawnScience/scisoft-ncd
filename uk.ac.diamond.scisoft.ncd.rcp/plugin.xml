      <handler
            class="uk.ac.diamond.scisoft.ncd.rcp.handlers.SectorIntegrationFileHandler"
            commandId="uk.ac.diamond.scisoft.ncd.rcp.setSectorIntegration">
         <enabledWhen>
            <and>
               <with
                  variable="activeMenuSelection">
               <count
                     value="1">
               </count>
               </with>
               <or>
               <with
                  variable="activeMenuSelection">
                  <iterate>
                     <and>
                        <instanceof
                              value="org.eclipse.core.resources.IFile">
                        </instanceof>
                     </and>
                  </iterate>
               </with>
